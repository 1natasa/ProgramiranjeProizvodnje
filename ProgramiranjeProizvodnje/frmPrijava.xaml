        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgramiranjeProizvodnje"
        mc:Ignorable="d"
        Title="Prijava" Height="450" Width="800">
    <Grid>
        <Label Name="lblKorisnickoIme" Content="Korisnicko ime:" HorizontalAlignment="Left" Margin="217,152,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.232,1.725"/>
        <TextBox Name="txtKorisnickoIme" HorizontalAlignment="Left" Height="23" Margin="374,155,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
